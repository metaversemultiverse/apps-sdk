{
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node"
    ],
    "module": "ESNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "allowJs": true,
    "target": "es2019",
    "sourceMap": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "lib/*": [
        "./lib/*"
      ],
      "tests/*": [
        "./tests/*"
      ],
      "types/*": [
        "./lib/types/*"
      ],
      "errors/*": [
        "./lib/errors/*"
      ],
      "utils/*": [
        "./lib/utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode/**/*",
    "dist",
    "tests"
  ],
  "include": [
    "./lib/**/*"
  ],
  "ts-node": {
    "files": true
  }
}
